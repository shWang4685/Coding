<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wzj.demo.mapper.TeacherMapper">
    <resultMap id="BaseResultMap" type="package com.demo.entity">
        <result column="class_id" property="class_id" jdbcType="INTEGER"/>
        <result column="class_name" property="class_name" jdbcType="VARCHAR"/>
        <result column="class_teacher" property="class_teacher" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">class_id, class_name, class_teacher</sql>
    <select id="getClassById" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from class_tbl
        where class_id = #{id}
    </select>
</mapper>
